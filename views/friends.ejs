<h1>Friends List Goes Here</h1>

<% friends.forEach(function(friend) { %>
  <li><%= friend %></li>
<% }); %>

<%# In any form, the name attribute becomes the key, and the inputted value 
becomes the value, in the key/value pair posted in the req.body object.
So req.body.newFriend will access the name typed into the form. %>
<form action="/addfriend" method="POST">
  <input type="text" name="newFriend" placeholder="name">
  <button>I made a new friend</button>
</form>